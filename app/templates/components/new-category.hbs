{{#if addNewCategory}}
  <h1>New Category</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn saveNewCategory"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn newCategoryForm"{{action 'categoryFormShow'}}>New Category</button>
{{/if}}
