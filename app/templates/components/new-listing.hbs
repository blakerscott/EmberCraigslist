{{#if addNewListing}}
  <h1>New Listing</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="name">Listing title</label>
          {{input value=name id="name" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="dateAdded">Date:</label>
          {{input value=dateAdded id="dateAdded" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="contactModel">Seller name</label>
          {{input value=contactModel id="contactModel" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="contactEmail">Email</label>
          {{input value=contactEmail id="contactEmail" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="latitude">Latitude</label>
          {{input value=latitude id="latitude" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="longitude">Longitude</label>
          {{input value=longitude id="longitude" class="form-control"}}
        </div>

        <button class="btn" {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn" {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
